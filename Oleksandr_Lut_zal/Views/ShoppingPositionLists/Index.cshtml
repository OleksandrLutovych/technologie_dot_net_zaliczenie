@model IEnumerable<Oleksandr_Lut_zal.Models.ShoppingPositionList>

@{
    ViewData["Title"] = "Index";
}

<h1>Moje listy zakupów</h1>

<p>
    <a asp-action="Create">Utwórz nową listę</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.listTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.listTitle)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.id">Podgląd</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
