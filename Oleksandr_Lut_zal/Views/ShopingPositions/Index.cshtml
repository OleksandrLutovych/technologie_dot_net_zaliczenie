@model IEnumerable<Oleksandr_Lut_zal.Models.ShopingPosition>

@{
    ViewData["Title"] = "Index";
}

<h1>Pozycje zakupowe</h1>

<p>
    <a asp-action="Create">Utwórz pozycję</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa
            </th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span style="@(!item.isDrawOut ? "" : "text-decoration: line-through;")">
                        @Html.DisplayFor(modelItem => item.description)
                    </span>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.id">Podgląd</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
